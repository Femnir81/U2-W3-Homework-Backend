@model IEnumerable<U2_W3_Homework_Backend.Models.Pizze>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center my-5 text-danger fs-1">Pizze</h2>

<div class="container d-flex">

    @foreach (var item in Model)
    {
        <div class="card w-50 m-3" style="max-width:250px; height:400px; min-height:400px">
            <img src="/Content/Img/@Html.DisplayFor(modelItem => item.Foto)" class="card-img-top" alt="..." style="width:100%">
            <div class="card-body d-flex flex-column justify-content-between">
                <div style="max-height:140px">
                    <h5 class="card-title overflow-hidden" style="text-overflow:ellipsis; white-space:nowrap">@Html.DisplayFor(modelItem => item.Nome)</h5>
                    <p class="card-text overflow-hidden" style="text-overflow:ellipsis; white-space:nowrap">@Html.DisplayFor(modelItem => item.Ingredienti).</p>
                </div>
                @Html.ActionLink("Dettagli", "Details", new { id = item.ID }, new { @class = "btn btn-danger" })
            </div>
        </div>
    }

</div>


