@model U2_W3_Homework_Backend.Models.Ordini

<div class="container d-flex justify-content-center my-5">
@using (Html.BeginForm("PartialViewCheckout", "Ordini", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal" style="width:500px">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.IndirizzoSpedizione, htmlAttributes: new { @class = "control-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.IndirizzoSpedizione, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IndirizzoSpedizione, "", new { @class = "text-danger" })
        </div>
    </div>

    <button type="button" class="btn btn-primary my-1" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Conferma Acquisto
    </button>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Conferma acquisto</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Vuoi Confermare l'acquisto? Una volta confermato, non potrai più modificare il tuo ordine.
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Conferma" class="btn btn-success" />
                        </div>
                    </div>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>   
</div>
}
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
