@model U2_W3_Homework_Backend.Models.Utenti

@{
    ViewBag.Title = "Login";
}

<h1 class="text-center text-danger my-5">Login</h1>

<div class="container d-flex flex-column align-items-center">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", style = "min-width:500px" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password", style = "min-width:500px" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group my-3 d-flex justify-content-center">
                <div class="">
                    <input type="submit" value="Login" class="btn btn-danger" />
                </div>
            </div>
        </div>
    }

    <div>
        Non sei ancora registrato? Effettua la @Html.ActionLink("Registrazione", "Register", "Utenti", null, new { @class = "text-danger me-2", style = "text-decoration:none;" })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
